# Copy this file to .env and fill in your values
# Never commit .env to version control!

# Notion Configuration
NOTION_TOKEN=your_notion_integration_token_here
NOTION_SOURCE_DB_ID=your_source_database_id_here
NOTION_DEST_DB_ID=your_destination_database_id_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Customize property names if using different names in your Notion DBs
# NOTION_PROP_URL="URL"
# NOTION_PROP_DONE="Summarized"
# NOTION_PROP_ERR="Last error"
# NOTION_PROP_RETRY="Retry count"
# NOTION_DEST_PROP_TITLE="Name"
# NOTION_DEST_PROP_URL="Source URL"
# NOTION_DEST_PROP_TYPE="Type"
# NOTION_DEST_PROP_SUMM="Summary"
# NOTION_DEST_PROP_DATE="Added"

# Optional: Customize model and limits
# OPENAI_MODEL="gpt-4o-mini"
# MAX_CHARS=120000
# MAX_RETRIES=3

# Optional: Custom summarization prompt
# SUMMARY_PROMPT="""You are my research assistant.
# Summarize the following content.
#
# Title: {title}
# URL: {url}
#
# CONTENT:
# {content}
# """
